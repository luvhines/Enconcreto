<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@drawable/fondo1">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="64dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="390dp"
            android:layout_height="172dp"
            android:src="@drawable/img_sesion" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:text="@string/act1_texto1"
            android:textColor="@color/gray"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/campo1"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/gray"
            android:hint="@string/act1_campo1"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/act1_texto2"
            android:textColor="@color/gray"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/campo2"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/gray"
            android:hint="@string/act1_campo2"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:onClick="eventoBoton"
            android:textSize="30sp"
            android:textColor="@color/dark_gray"
            android:text="@string/act1_texto_btn"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>